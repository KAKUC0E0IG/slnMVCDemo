@using prjMVCDemo.Models
@model List<CCustomer>
@{
    ViewBag.Title = "List";
}

<h2>客戶一覽</h2>
<p>
<a href="~/Customer/create">新增客戶</a>
    </p>
<p>
    <table border= "1">
        <tr>
            <td>序</td>
            <td>姓名</td>
            <td>電話</td>
            <td>電子郵件</td>
            <td>地址</td>
            <td>密碼</td>
            <td>修改</td>
            <td>刪除</td>
            
        </tr>
        @{int count = 0;
            foreach (CCustomer t in Model)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @t.fName
                    </td>
                    <td>
                        @t.fPhone
                    </td>
                    <td>
                        @t.fEmail
                    </td>
                    <td>
                        @t.fAddress
                    </td>
                    <td>
                        @t.fPassword
                    </td>
                    <td>
                        @Html.ActionLink("修改", "update", "Customer", new { id = t.fId }, null )
                    </td>
                    <td>
                        @Html.ActionLink("刪除", "delete", "Customer", new { id = t.fId }, new { onclick = "return confirm('確定要刪除嗎?')" })
                    </td>
                </tr>
            }
        }
    </table>
</p>