@model prjMVCDemo.Models.CCustomer

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>請輸入帳號密碼</h4>
    <div class="form-group">
        註冊時的Email
        <div class="col-md-10">
            @Html.TextBox("txtAccount", "", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        密碼
        <div class="col-md-10">
            @Html.TextBox("txtPassword", "", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="登入" class="btn btn-primary" />
        </div>
    </div>
</div>
}