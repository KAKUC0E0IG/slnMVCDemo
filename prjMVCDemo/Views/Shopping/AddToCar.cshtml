@model prjMVCDemo.tProduct

@{
    ViewBag.Title = "AddToCar";
}

<h2>加入購物車</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <input type="hidden" name="txtFID" value=@ViewBag.FID>
        請輸入數量
        <div class="form-group">
            數量
            <div class="col-md-10">
                @Html.TextBox("txtCount", "1", new { @class = "control-label col-md-2" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="加入購物車" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("回列表", "List")
</div>

